# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space

[*.yml, *.yaml]
indent_size = 2
indent_style = space

[Dockerfile]
indent_style = space

[*]
charset = utf-8
end_of_line = lf
files.encoding = "utf8"
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true
