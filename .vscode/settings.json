{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.rulers": [80],
	"editor.tabSize": 4,
    "editor.autoIndent": "full",
	"files.associations": {
		".git-blame-ignore-revs": "gitignore",
		".imgbotconfig": "json",
		".pylintrc": "ini",
        ".coveragerc": "ini",
        ".stylelintrc": "yaml",
        ".weblate": "ini",
        "extensions.json": "jsonc", // "vscode",
        "requirements.txt": "editorconfig",
        "settings.json": "jsonc", // "vscode",
    },
	"files.encoding": "utf8",
	"files.eol": "\r\n",
	"files.exclude": {
		"**/.classpath": false,
		"**/.DS_Store": false,
		"**/.factorypath": false,
		"**/.git": false,
		"**/.github": false,
		"**/.hg": false,
		"**/.project": false,
		"**/.settings": false,
		"**/.svn": false,
		"**/CVS": false,
    },
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": false,
	"files.trimTrailingWhitespace": true,
	"gitlens.advanced.blame.customArguments": [
		"-w",
		"--ignore-revs-file",
		".git-blame-ignore-revs"
	],
	"workbench.editorAssociations": {
		"*.dmi": "imagePreview.previewEditor"
	},
	"gitlens.blame.avatars": true,
	"gitlens.blame.format": "${author|20} ${message|30?} ${ago|14-}",
	"gitlens.defaultGravatarsStyle": "retro",
	"gitlens.keymap": "none",
	"gitlens.views.fileHistory.enabled": true,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "git.autofetch": true,
    "gitlens.advanced.messages": {
		"suppressCommitHasNoPreviousCommitWarning": false,
		"suppressCommitNotFoundWarning": false,
		"suppressFileNotUnderSourceControlWarning": false,
		"suppressGitVersionWarning": false,
		"suppressLineUncommittedWarning": false,
		"suppressNoRepositoryWarning": false,
	},
    "licenser.author": "Gesugao-san",
    "licenser.customHeader": "\n@FILENAME@ - @PROJECT@\n\nCopyright @YEAR@ @AUTHOR@\n\nThis is my license...",
    "licenser.disableAutoHeaderInsertion": true,
    "licenser.license": "MIT",
    "licenser.projectName": "Infrastructure template",
    "licenser.useSingleLineStyle": true,
	"workbench.iconTheme": "vscode-icons",
    "gitlens.gitExplorer.files.layout": "auto",
    "gitlens.historyExplorer.enabled": false,
    "gitlens.mode.active": "review",
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
}
