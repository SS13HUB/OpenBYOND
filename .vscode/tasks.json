{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "echo",
			"type": "shell",
			"command": "echo Hello",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true, // Before starting a new session in an terminal, clear the terminal.
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			// http://www.byond.com/forum/post/2377547
			"label": "DM (CM)",
			"type": "shell",
			"command": "D:/GAMES/Byond/bin/dm.exe",
			"args": [
                "D:/projects/ColonialMarinesALPHAprivate/ColonialMarinesALPHA.dme"
            ],
			"problemMatcher": {
				"owner": "dm",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^([^:]+):(\\d+):([^:]+): (.*)$",
					"file": 1,
					"line": 2,
					"severity": 3,
					"message": 4
				}
			},
			// "group": {
			// 	"kind": "build",
			// 	"isDefault": true
			// },
			"presentation": {
				"clear": true, // Before starting a new session in an terminal, clear the terminal.
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"type": "dreammaker",
			"dme": "tgstation.dme",
			"problemMatcher": [
				"$dreammaker"
			],
			"group": "build",
			"label": "DM (TG) â€” dm: build - tgstation.dme",
			"presentation": {
				"clear": true, // Before starting a new session in an terminal, clear the terminal.
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"env": {
					"DM_EXE": "${config:dreammaker.byondPath}"
				}
			}
		}
	]
}
